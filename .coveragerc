[run]
source = '.'
omit =
    */.local/*
    *tests*
    *apps.py
    *manage.py
    *__init__.py
    *migrations*
    *asgi*
    *wsgi*
    *admin.py
    *urls.py
    */settings/*
    Pipfile
    Pipfile.lock
    .editorconfig
    .coveragerc

[report]
omit =
    */.local/*
    *tests*
    *apps.py
    *manage.py
    *__init__.py
    *migrations*
    *asgi*
    *wsgi*
    *admin.py
    *urls.py
    */settings/*
    Pipfile
    Pipfile.lock
    .editorconfig
    .coveragerc

fail_under = 96
show_missing = True
skip_covered = True